<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="66dp"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="6dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        tools:text="Sparky" />

    <TextView
        android:id="@+id/tvHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUsername"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="41dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        tools:text="Sparky" />

    <ImageView
        android:id="@+id/ivPost"
        android:layout_width="match_parent"
        android:layout_height="326dp"
        android:layout_below="@+id/tvHandle"
        android:layout_marginTop="26dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="397dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPost"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-1dp"
        android:paddingTop="10dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tvDescription"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/ivHeart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvLikesAmount"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="11dp"
            android:layout_toRightOf="@+id/ivHeart"
            android:width="40dp"
            tools:text="40" />

        <ImageView
            android:id="@+id/ivComment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="67dp"
            android:layout_marginLeft="67dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/ivHeart"
            android:layout_toRightOf="@+id/ivHeart"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvCommentsAmount"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/ivComment"
            android:width="40dp"
            tools:text="40" />

        <ImageView
            android:id="@+id/ivRepost"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="67dp"
            android:layout_marginLeft="67dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/ivComment"
            android:layout_toRightOf="@+id/ivComment"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvRepostAmount"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/ivRepost"
            android:width="40dp"
            tools:text="40" />

        <ImageView
            android:id="@+id/ivSave"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="69dp"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/ivRepost"
            android:layout_toRightOf="@+id/ivRepost"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvSavedAmount"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/ivSave"
            android:layout_toRightOf="@+id/ivSave"
            android:width="40dp"
            tools:text="40" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="59dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="1dp"
        android:adjustViewBounds="true"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvSeconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="133dp"
        android:layout_marginLeft="133dp"
        android:layout_marginTop="48dp"
        tools:text="42secs" />
</RelativeLayout>